#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

locations=Braunschweig,Wolfsburg,Berlin,Amsterdam,Tenerife
format="%l_%C_%t_%h_%w\n"

# shellcheck disable=SC1083
curl           \
  --location   \
  --silent     \
  --compressed \
  wttr.in/{"$locations"}?format="$format" | column -t -s "_"
