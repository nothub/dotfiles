#!/usr/bin/env bash

set -o errexit
set -o nounset

nohup screenkey \
    --timeout 3.5 \
    --compr-cnt 1 \
    --font "JetBrainsMono Nerd Font" \
    --font-size medium \
    --font-color "#E6E2BD" \
    --bg-color "#232425" \
    --opacity 0.75 \
    --geometry "800x100+1500+20" \
    --position bottom \
    --bak-mode full \
    --no-whitespace &
