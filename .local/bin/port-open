#!/usr/bin/env bash

set -o errexit
set -o pipefail

if [[ -z $1 ]]; then
    exit 1
fi

if [[ -n $2 ]]; then
    host="$1"
    port="$2"
else
    host="127.0.0.1"
    port="$1"
fi

echo "testing $host:$port"

set +o errexit
timeout 1 bash -c "</dev/tcp/$host/$port"
state="$?"
set -o errexit

case $state in
0)
    echo "success"
    ;;
124)
    echo "timeout"
    ;;
*)
    echo "failure (exit code: ${state})"
    ;;
esac
