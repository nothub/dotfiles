#!/usr/bin/env sh

set -o errexit
set -o nounset

archive="${HOME}/screenshots/"
mkdir -p "${archive}"
cd "${archive}"

# shellcheck disable=SC2016
filename=$(
  scrot \
    --select \
    --freeze \
    --line style=dash,width=1 \
    --quality 95 \
    --silent \
    --exec 'echo $f'
)

xclip -in \
  -selection "clipboard" \
  -target "image/png" \
  "${filename}"
