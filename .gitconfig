[core]
	editor = hx
	autocrlf = input
	excludesfile = ~/.gitignoreglobal

[diff]
	submodule = log
	algorithm = histogram
	noprefix = true

[color]
	ui = auto

[init]
	defaultBranch = main

[alias]
	adog = log --all --decorate --oneline --graph
	adg = log --all --decorate --graph

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[commit]
	gpgsign = true
	verbose = true
