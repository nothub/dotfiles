[init]
	defaultBranch = main

[alias]
	adog = log --all --decorate --oneline --graph
	adg = log --all --decorate --graph

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[filter "age"]
	clean = agek -a -
	smudge = age -d -i ~/.ssh/id_ed25519 -
	required = true

[commit]
	gpgsign = true
	verbose = true
